<div class="container">
	<div class="row">
		<div class="col-lg-6">

			<%= form_for @upload do |f| %>

				<div class="form-group">
					<label for="InputName">Title</label>
					<div class="input-group">
						<%= f.text_field :title %>
						<span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
					</div>
				</div>
				<div class="form-group">
					<label for="InputName">Author</label>
					<div class="input-group">
						<%= f.text_field :author %>
						<span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
					</div>
				</div>
				<div class="form-group">
					<label for="InputName">Editor</label>
					<div class="input-group">
						<%= f.text_field :editor %>
						<span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
					</div>
				</div>
				<div class="form-group">
					<label for="InputName">Comments</label>
					<div class="input-group">
						<%= f.text_area :description, size: "60x12" %>
						<span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
					</div>
				</div>
				<div class="form-group">
					<label for="InputName">Image</label>
					<div class="input-group">
						<%= f.file_field :image, :class => "btn btn-default" %>
						<span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
					</div>
				</div>

				<%= f.submit "Upload the Image", :class => 'btn btn-primary' %>
			<% end %>

		</div>
	</div>
</div>
